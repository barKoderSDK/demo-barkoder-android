<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.WebHookConfigurationDialogFragment"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_bg"
    android:paddingBottom="20dp">


    <TextView
        android:id="@+id/textWebHookCongTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:text="Configure Webhook" />



        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextWebHookUrl"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:ems="10"
            android:backgroundTint="@color/textFieldColor"
            android:background="@color/textFieldColor"
            android:padding="8dp"
            android:textSize="11dp"
            android:layout_marginTop="20dp"
            android:hint="Enter Webhook URL"
            android:inputType="text"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextWebHookKey"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:backgroundTint="@color/textFieldColor"
            android:background="@color/textFieldColor"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:ems="10"
            android:textSize="11dp"
            android:inputType="textPassword"
            android:hint="Enter Secret Word"
             />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowMeHowSettings"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/brand_color"
            android:textSize="11sp"
            app:cornerRadius="20dp"
            android:gravity="center"
            app:icon="@drawable/ic_information_circle"
            app:iconGravity="textStart"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="How To" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveWebHook"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/brand_color"
            android:layout_width="130dp"
            android:layout_marginStart="5dp"
            app:icon="@drawable/ic_check_24px"
            app:iconGravity="textStart"
            android:textSize="11sp"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Save" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResetWebHook"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/brand_color"
            android:textSize="11sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_arrow_path_rounded_square"
            app:iconGravity="textStart"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_marginEnd="5dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Reset Value" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelWebHook"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/brand_color"
            android:textSize="11sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_close_24px"
            app:iconGravity="textStart"
            android:layout_marginStart="5dp"
            android:textAllCaps="false"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Cancel" />


    </LinearLayout>








</LinearLayout>